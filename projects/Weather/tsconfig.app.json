{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@src/*": [
        "projects/Weather/src/*.web",
        "projects/Weather/src/*"
      ]
